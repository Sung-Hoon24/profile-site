rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Existing Resume Rules
    match /resumes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ’° Phase 1: Products (Public Read, Admin Write)
    match /products/{productId} {
      allow read: if true; 
      allow write: if false; // Admin only via Firebase Console/Admin SDK
    }

    // ðŸ§¾ Phase 1: Purchases (Immutable Receipts)
    // Document ID must be 'imp_uid' to ensure idempotency is managed by server
    match /users/{userId}/purchases/{purchaseId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if false; // ðŸ›‘ STRICT: Only Cloud Functions can write here
    }

    // ðŸ‘¤ Phase 1: User Profile & Entitlements Protection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow update IF AND ONLY IF 'entitlements' is NOT changed
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && (
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['entitlements'])
                    );
                    
      allow create: if request.auth != null && request.auth.uid == userId; // Initial creation allowed
    }
  }
}
