rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Existing Resume Rules
    match /resumes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Resume V2 Rules (Active Collection)
    match /resumes_v2/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ’° Phase 1: Products (Public Read, Admin Write)
    match /products/{productId} {
      allow read: if true; 
      allow write: if false; // Admin only via Firebase Console/Admin SDK
    }

    // ğŸ§¾ Phase 1: Purchases (Immutable Receipts)
    // Document ID must be 'imp_uid' to ensure idempotency is managed by server
    match /users/{userId}/purchases/{purchaseId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if false; // ğŸ›‘ STRICT: Only Cloud Functions can write here
    }

    // ğŸ‘¤ User Profile & Entitlements Protection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      // ğŸ›¡ï¸ Helper: entitlements í•„ë“œ ì¡°ì‘ ë°©ì§€
      function isNotTouchingEntitlements() {
        return !('entitlements' in request.resource.data) || 
               (resource != null && request.resource.data.entitlements == resource.data.entitlements);
      }

      // âœ… create: entitlements í¬í•¨ ì‹œ ê±°ë¶€
      allow create: if request.auth != null && request.auth.uid == userId
                    && !('entitlements' in request.resource.data);

      // âœ… update: entitlements ë³€ê²½ ì‹œ ê±°ë¶€
      allow update: if request.auth != null && request.auth.uid == userId
                    && isNotTouchingEntitlements();
    }
  }
}
